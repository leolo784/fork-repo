{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2016",
    "lib": ["es7", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
