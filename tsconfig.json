{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "outDir": "dist",
    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules"]
}
